#specify dynamic model
dyn_model lorenz

#specify dynamic model input file
dyn_model_input ./lorenz.in

#specify data assimilation method
da_filter EnKF

# specify filter method parameters(EnRML)
beta 0.1
max_pseudo_time 1
forward_interval 1
criteria 1e-3

# stationary system or not
stationary_flag False

#specify the end time
t_end 19.75

#specify the data assimilation inverval
da_interval 0.25

#specify the ensemble samples
nsamples 50

#specify the debug flag and folder name
save_flag           True
save_folder         ./results
